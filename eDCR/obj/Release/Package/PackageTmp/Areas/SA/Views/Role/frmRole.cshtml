@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<script src="~/AdminLTE/plugins/jQuery/jquery-2.2.3.min.js"></script>
<link href="~/Content/CSS/InputText.css" rel="stylesheet" />


<script type="text/javascript">
    $(document).ready(function () {
        $.ajaxSetup({
            beforeSend: function () {
                $("#divLoading").show();
            },
            complete: function () {
                $("#divLoading").hide();
            }
        });
        EventPermission();
        $('#btnReset').click(function () {

            $(":checkbox").prop('checked', false);
            //  $('.chk').prop('checked', false);
            ResetData();



        });

        $('#btnView').click(function () {
            PopupWindow.center();
            PopupWindow.open();
        
            $.ajax({
                url: '/Role/GetRole',
                method: 'get',
                data: 'json',
                success: function (data) {
                    if (data != "") {
                        $('#PopupWindowGrid').data('kendoGrid').dataSource.data(data);
                    }
                    else {
                        PopupWindow.close();
                        AcknowledgeMsg();
                        toastr.info($("#MessageText").html());
                    }

                },
                error: function () {
                    alert('Error occured!');
                },
                //complete: function () { },
            });

        });
 


        //Initializing Main page details Kendo Grid Colums
        var PopupGrid = $('#PopupWindowGrid').kendoGrid({
            dataSource: new kendo.data.DataSource({
                batch: true,
                schema: {
                    model: {
                        id: "RoleID",
                        fields: {
                            RoleID: { type: "string" },
                            RoleName: { type: "string" }
                        }
                    }
                },
                pageSize: 10,
            }),
            pageable: {
                //refresh: true,
                pageSizes: true, buttonCount: 5
            },
            dataBound: function (e) {
                AutoFitColumn(this.element[0].id);
            },
            scrollable: true,
            sortable: false,
            filterable: false,
            editable: false,
            selectable: "row",
            //selectable: "multiple",
            toolbar: [{ template: "<input type='text' id='txtInput'  style='float:right' placeholder='Search...' class='k-textbox'>" }, ],
            navigatable: true,
            columnMenu: false,
            reorderable: false,
            resizable: false,
            resize: function (e) {
                this.table.height(this.element.height() + this.table.height() - 1);
            },
            columns: [
                 { field: "RoleID", title: "RoleID" ,hidden:true},
                 { field: "RoleName", title: "RoleName" },
                 { field: "IsActive", title: "IsActive" }

            ]

        }).data('kendoGrid');

        $('#PopupWindowGrid').dblclick(function () {
            var grid = $(this).data('kendoGrid');
            var selectRow = grid.dataItem(grid.select());
            PopupWindow.close();
            SetMasterData(selectRow);

            $('#IsActive').prop('checked', selectRow.IsActive);
        });

        //Produc Name twise Filter table row
        $("#txtInput").keyup(function () {
            var val = $(this).val();
            $("#PopupWindowGrid").data("kendoGrid").dataSource.filter({
                logic: "or",
                filters: [
                     { field: "RoleID", operator: "contains", value: val },
                     { field: "RoleName", operator: "contains", value: val },
                   //  { field: "IsActive", operator: "contains", value: val },

                ]
            });
        });





        //function SetMasterData(data) {
        //    $.each(data, function (key, value) {
        //        $('#' + key).val(value);
        //    });
        //}
        var chkValue = true;
        $('#IsActive').click(function () {
            if ($(this).is(':checked')) { chkValue = $('#IsActive').prop('checked'); }
            else { chkValue = $('#IsActive').prop('checked'); }
        });
        $('#btnSave').click(function () {
            var Input = InputValidation('RoleName');

            if (Input == 0) {
                master.RoleID = $('#RoleID').val();
                master.RoleName = $('#RoleName').val();
                master.IsActive = chkValue;



                $.ajax({
                    url: '/Role/OperationsMode',
                    data: JSON.stringify(master),
                    type: 'POST',
                    contentType: 'application/json;',
                    dataType: 'json',
                    success: function (data) {
                        if (data.Status == "Yes") {
                            $("#RoleID").val(data.ID);
                            OperationMsg(data.Mode);
                            toastr.success($("#MessageText").html());
                        }
                        else {
                            ErrorFrmServerMsg(data.Status);
                            toastr.warning($("#MessageText").html());
                        }

                    },
                    error: function () {
                        ErrorFrmClientMsg();
                        toastr.warning($("#MessageText").html());
                    },
                    // complete: function () { CompletedMsg(); },
                }); //End of ajax call
            }
            else {
                ValidationMsg();
                toastr.info($("#MessageText").html());
            }

        });
        var master = { "RoleID": "", "RoleName": "", "IsActive": "" };
    });
</script>




        <div class="box-header with-border">@*Form Title*@
            <div class="col-xs-12 col-sm-12 col-md-4 col-lg-4"> <div id="MessageText"></div></div>
            <div class="col-xs-12 col-sm-12 col-md-8 col-lg-8">
                <div style="text-align:right;">
                    <button id="btnReset" class="btn btn-primary btn-lg" type="button"><i class="glyphicon glyphicon-refresh"></i>Reset</button>
                    <button id="btnSave" class="btn btn-primary btn-lg" type="button"><i class="glyphicon glyphicon-save-file"></i>Save</button>
                    <button id="btnView" class="btn btn-primary btn-lg" type="button"><i class="glyphicon glyphicon-search"></i>View</button>
                    @*<button id="btnDelete" class="btn btn-primary btn-lg" type="button"><i class="glyphicon glyphicon-trash"></i>Delete</button>*@
                </div>
            </div>
        </div>
     <div class="box-body">
    @*Form Body Content*@
    <div class="row">
        <div class="col-xs-12 col-sm-12 col-md-3 col-lg-3"> Role Name:</div>
        <div class="col-xs-12 col-sm-12 col-md-3 col-lg-3"><input type="text" id="RoleName" name="RoleName" placeholder="Role Name" class="RequiredField form-control" /></div>
        <div class="col-xs-12 col-sm-12 col-md-3 col-lg-3"><input type="hidden" id="RoleID" name="RoleID" readonly="readonly" class="form-control" /></div>
        <div class="col-xs-12 col-sm-12 col-md-3 col-lg-3"><input type="checkbox" id="IsActive" class="chk" name="IsActive" checked="checked"> IsActive</div>


    </div>
         <div id="divLoading" style="margin: 0px; padding: 0px; position: fixed; right: 0px;top: 0px; width: 100%; height: 100%; background-color:silver; z-index:10001;opacity: .8; filter: alpha(opacity=70);display:none">
             <p style="position: absolute; top: 50%; left: 50%; color: White;"><img src="~/Content/Images/loading1.gif" /> </p>
         </div>
</div>
<div class="box-footer">@*Form Footer*@</div>
<div class="row">
    <div id="PopupWindow" class="PopupWindowLayout" style="display: none;">
        <div id="PopupWindowGrid" class="PopUpGrid"></div>
    </div>
</div>


